{
  "name": "@volcanicminds/typeorm",
  "version": "2.2.10",
  "type": "module",
  "license": "MIT",
  "description": "TypeORM for the volcanic (minds) backend",
  "keywords": [
    "volcanic",
    "database",
    "typeorm",
    "typescript",
    "esm"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "reset": "npm install && npm update && npm run build",
    "upgrade-deps": "npx npm-check-updates -u",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "check-all": "npm run lint && npm run type-check",
    "combine": "node combine.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volcanicminds/volcanic-database-typeorm.git"
  },
  "engines": {
    "node": ">=24"
  }
}
